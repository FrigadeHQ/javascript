{
  "name": "@frigade/react",
  "version": "0.0.1",
  "description": "The official React SDK for Frigade.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "./lib"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "test": "jest",
    "semantic-release": "semantic-release",
    "lint": "eslint --fix --ext .ts,.tsx .",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css ./lib",
    "build": "yarn clean && npx tsc && yarn copy-files",
    "local-release": "npx tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FrigadeHQ/frigade-react.git"
  },
  "keywords": [
    "React",
    "Onboarding",
    "Tutorial",
    "Intro",
    "Checklist",
    "Welcome",
    "Introduction",
    "Instructions",
    "Walkthrough"
  ],
  "peerDependencies": {
    "react": "^17.0.2 || ^18.0.2",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/react": "12.0.0",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/jest": "^23.3.1",
    "babel-jest": "^29.4.1",
    "copyfiles": "^2.4.1",
    "eslint-config-backpacker-react-ts": "^0.3.0",
    "jest": "^29.4.1",
    "jest-config": "^29.3.1",
    "jest-environment-jsdom": "^29.4.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.4.1",
    "react": "17.0.2",
    "react-test-renderer": "17.0.2",
    "rimraf": "^4.1.2",
    "semantic-release": "^19.0.3",
    "typescript": "^4.9.4"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ],
  "author": "Frigade Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FrigadeHQ/frigade-react/issues"
  },
  "homepage": "https://github.com/FrigadeHQ/frigade-react#readme",
  "dependencies": {
    "dompurify": "^3.0.1",
    "framer-motion": "6.5.0",
    "react-dom": "17.0.2",
    "react-portal": "^4.2.2",
    "styled-components": "^5.3.9",
    "swr": "^2.0.3",
    "uuid": "^9.0.0"
  }
}
